<% post = comment.post %>
<div>
  <%= comment.body %>
  <% if comment.user == current_user %>
    <span class="delete"><%= link_to fa_icon("times"), post_comment_path(post, comment),
                          method: :delete,
                          remote: true,
                          data:   {confirm: "Are you sure?"}%></span>
  <% end %>
  <hr>
</div>
