<head>
<link rel='stylesheet' href='http://fonts.googleapis.com/css?family=PT+Sans:400,700'>
<link rel="stylesheet" href="assets/reset.css">
<link rel="stylesheet" href="assets/supersized.css">
<link rel="stylesheet" href="assets/style.css">
<script src="assets/jquery-1.8.2.min.js"></script>
<script src="assets/supersized.3.2.7.min.js"></script>
<script src="assets/supersized-init.js"></script>
<script src="assets/scripts.js"></script>
</head>
<body>
        <div class="page-container">
          <div class="sub">
            <h1>Login</h1>
          <%= form_tag(sessions_path) do %>

          <%= email_field_tag :email, nil, class: "username", placeholder: "Email" %>

          <%= password_field_tag :password, nil, class: "password", placeholder: "Password" %>
            <%= submit_tag "Sign In", class: "button signin-btn"%>
          <% end %>

            <div class="connect">
              <p>First Time to <img src='assets/logo3.png' style="  width: 100px; margin-bottom: -5px; margin-left: 1px;" /> ? </p>

              <div class="error"><span>+</span></div>
            
              <%= button_to "Sign Up", new_user_path, class: "button", id: "signup", method: :get %>
            </form>
                <p>Or Connect With:</p>
                <p>
                    <a class="facebook" href="/auth/facebook"></a>
                    <a class="twitter" href=""></a>
                </p>
            </div>
          </div>
        </div>
</body>
